{
    "name": "jspaceboots/crudql",
    "type": "library",
    "description": "Provides quick application scaffolding as well as HTML and GraphQL API interfaces for model CRUD.",
    "keywords": [
        "jspaceboots",
        "crudql"
    ],
    "homepage": "https://github.com/jspaceboots/crudql",
    "license": "MIT",
    "authors": [
        {
            "name": "Johnny Spaceboots",
            "email": "jspaceboots@gunpla.builders",
            "homepage": "https://gunpla.builders",
            "role": "Developer"
        }
    ],
    "require": {
        "illuminate/support": "~5.1",
        "php" : "~5.6|~7.0",
        "folklore/graphql": "~1.0.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=5.4.3",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "jspaceboots\\crudql\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "jspaceboots\\crudql\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
